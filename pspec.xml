<?xml version="1.0" ?>
<!DOCTYPE PISI SYSTEM "https://solus-project.com/standard/pisi-spec.dtd">
<PISI>
    <Source>
        <Name>glib2</Name>
        <Packager>
            <Name>Solus Packaging</Name>
            <Email>packaging@solus-project.com</Email>
        </Packager>
        <Summary>Low level C library containing data structure handling and interfaces</Summary>
        <Description>GLib is the low-level core library that forms the basis for projects such as GTK+ and GNOME. It provides data structure handling for C, portability wrappers, and interfaces for such runtime functionality as an event loop, threads, dynamic loading, and an object system.</Description>
        <License>GPLv2+</License>
        <Archive sha1sum="948a768931ca321a35e16556a1c8adcae04babf2" type="tarxz">http://ftp.gnome.org/pub/gnome/sources/glib/2.50/glib-2.50.2.tar.xz</Archive>

        <Patches>
            <Patch level="1">0001-Support-stateless-XDG-config-directory.patch</Patch>
        </Patches>

        <BuildDependencies>
            <Dependency>libelf-devel</Dependency>
            <Dependency>libelf-32bit-devel</Dependency>
            <Dependency>glibc-32bit-devel</Dependency>
            <Dependency>libgcc-32bit</Dependency>
            <Dependency type="pkgconfig32">libpcre</Dependency>
            <Dependency type="pkgconfig32">libffi</Dependency>
            <Dependency type="pkgconfig32">zlib</Dependency>
            <Dependency type="pkgconfig32">mount</Dependency>
        </BuildDependencies>
    </Source>

    <Package>
        <Name>glib2</Name>
        <Files>
            <Path fileType="executable">/usr/bin</Path>
            <Path fileType="library">/usr/lib64/lib*.so.*</Path>
            <Path fileType="library">/usr/lib64/gio/</Path>
            <Path fileType="data">/usr/share/bash-completion</Path>
            <Path fileType="library">/usr/share/glib-2.0</Path>
            <Path fileType="header">/usr/lib64/glib-2.0/include/glibconfig.h</Path>
            <Path fileType="library">/usr/share/gdb</Path>
            <Path fileType="localedata">/usr/share/locale</Path>
            <Path fileType="localedata">/usr/share/gettext/its</Path>
        </Files>
        <Provides>
            <COMAR script="packageHandler.py">System.PackageHandler</COMAR>
        </Provides>
    </Package>

    <Package>
        <Name>glib2-32bit</Name>
        <Summary>32bit files for glib2</Summary>
        <Description>32bit files for glib2</Description>
        <BuildType>emul32</BuildType>
        <PartOf>emul32</PartOf>
        <Files>
            <Path fileType="library">/usr/lib32/lib*.so.*</Path>
            <Path fileType="library">/usr/lib32/gio/</Path>
            <Path fileType="header">/usr/lib32/glib-2.0/include/glibconfig.h</Path>
        </Files>
        <RuntimeDependencies>
            <Dependency>glib2</Dependency>
            <Dependency>zlib-32bit</Dependency>
            <Dependency>libffi-32bit</Dependency>
        </RuntimeDependencies>
    </Package>

    <Package>
        <Name>glib2-devel</Name>
        <Summary>Development files for glib2</Summary>
        <Description>Development files required to build applications using the GLib library</Description>
        <Files>
            <Path fileType="header">/usr/include</Path>
            <Path fileType="header">/usr/lib64/lib*.so</Path>
            <Path fileType="data">/usr/lib64/pkgconfig</Path>
            <Path fileType="data">/usr/share/aclocal</Path>
        </Files>
        <PartOf>system.devel</PartOf>
        <RuntimeDependencies>
            <Dependency release="current">glib2</Dependency>
        </RuntimeDependencies>
    </Package>

    <Package>
        <Name>glib2-32bit-devel</Name>
        <BuildType>emul32</BuildType>
        <PartOf>emul32</PartOf>
        <Summary>32-bit Development files for glib2</Summary>
        <Description>32-bit Development files required to build applications using the GLib library</Description>
        <Files>
            <Path fileType="header">/usr/lib32/lib*.so</Path>
            <Path fileType="data">/usr/lib32/pkgconfig</Path>
        </Files>
        <RuntimeDependencies>
            <Dependency release="current">glib2-32bit</Dependency>
            <Dependency release="current">glib2-devel</Dependency>
        </RuntimeDependencies>
    </Package>

    <Package>
        <Name>glib2-docs</Name>
        <Summary>GLib API Documentation</Summary>
        <Description>Extensive documentation for developers wanting to use the GLib Library</Description>
        <Files>
            <Path fileType="doc">/usr/share/gtk-doc</Path>
        </Files>
    </Package>

